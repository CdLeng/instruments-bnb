<div class="title-container">
  <h2>Tons of instruments to choose from!</h2>
</div>

<div class="d-flex justify-content-center my-5">
  <%= form_with url: instruments_path, method: :get, class: "d-flex col-9" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search our instruments"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>

<div>
    <div class="cards-layout">
      <% @instruments.each do |instrument| %>
        <div class="card-instrument my-3">
          <img src="https://images.unsplash.com/photo-1612225330812-01a9c6b355ec?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80" />
          <div class="card-instrument-infos">
            <%= link_to instrument_path(instrument) do %>
              <h5><%= instrument.name %></h5>
              <p>⭐️ <%= avg_review(instrument) %> - (<%= instrument.reviews.count %>) </p>
            <% end %>
            <p><%= instrument.description %></p>
            <p class="price">€<%= instrument.price %> / day</p>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
</div>
