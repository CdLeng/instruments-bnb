          <div class="card-instrument-infos">
            <h5><%= instrument.name %></h5>
            <p><%= instrument.description %></p>
          </div>
          <div class="card-instrument-options">
            <p>â‚¬<%= instrument.price %></p>
            <%= link_to "Delete", instrument_path(instrument), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
