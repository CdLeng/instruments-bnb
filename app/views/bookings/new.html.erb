<div class="title-container">
  <h2>Do you want to book this instrument?</h2>
</div>

<div class="container my-5 center">
  <div class="row col-6 white">
    <h2>Booking</h2>
    <h5><%= @instrument.name %></h5>
    <p><%= @instrument.description %></p>
    <p class="border-bottom right"><%= @instrument.price %>/day</p>
    <br>

    <%= simple_form_for [@instrument, @booking] do |f| %>
      <%= f.input :date_start, as: :date, html5: true %>
      <%= f.input :date_end, as: :date, html5: true %>
      <%= f.button :submit, class: "btn btn-submit" %>
    <% end %>
  </div>
</div>
